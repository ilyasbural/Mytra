@page "/jobpostingdetailupdate/{id:guid}"
@inject HttpClient Http
@inject NavigationManager NavManager

<PageTitle>JobPostingDetail - @Id</PageTitle>
<h3>JobPostingDetail - @Id</h3>

<EditForm Model="Model" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name">İsim:</label>
        <InputText id="name" @bind-Value="Model.Name" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>

</EditForm>

@code
{
    [Parameter]
    public Guid Id { get; set; }
    private ServiceResponse<JobPostingDetailResponse>? Response { get; set; }
    private Utilize.JobPostingDetailUpdate Model { get; set; } = new Utilize.JobPostingDetailUpdate();

    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<ServiceResponse<JobPostingDetailResponse>>
        ($"https://localhost:7046/api/jobpostingdetailsingle?id={Id}");

        if (Response != null && Response.Data != null)
        {
            Model = new Utilize.JobPostingDetailUpdate
            {
                Id = Response.Data.Id,
                Name = Response.Data.Name
            };
        }
    }

    private async Task HandleValidSubmit()
    {
        HttpResponseMessage Result = await Http.PutAsJsonAsync("https://localhost:7046/api/jobpostingdetail", Model);
        NavManager.NavigateTo("/jobpostingdetail");
    }
}