@page "/candidatesettings"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>CandidateSettings</PageTitle>
<h3>CandidateSettings</h3>

@if (Response == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <tbody>
            <tr>
                <td><button class="btn btn-info btn-sm" @onclick="() => NavigateToNew()">Ekle</button></td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>REGISTER DATE</th>
                <th>UPDATE DATE</th>
                <th>IS ACTIVE</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var CandidateSettings in Response.DataList)
            {
                <tr>
                    <td>@CandidateSettings.Id</td>
                    <td>@CandidateSettings.Name</td>
                    <td>@CandidateSettings.RegisterDate</td>
                    <td>@CandidateSettings.UpdateDate</td>
                    <td>@CandidateSettings.IsActive</td>
                    <td></td>
                    <td>
                        <button class="btn btn-info btn-sm" @onclick="() => NavigateToDetail(CandidateSettings.Id)">Detay</button>
                        <button class="btn btn-warning btn-sm" @onclick="() => NavigateToEdit(CandidateSettings.Id)">Düzenle</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => NavigateToDelete(CandidateSettings.Id)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    private ServiceResponse<CandidateSettingsResponse>? Response { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<ServiceResponse<CandidateSettingsResponse>>("https://localhost:7046/api/candidatesettings");
    }

    private void NavigateToNew()
    {
        Navigation.NavigateTo($"/candidatesettingscreate");
    }

    private void NavigateToDetail(Guid id)
    {
        Navigation.NavigateTo($"/candidatesettingsinfo/{id}");
    }

    private void NavigateToEdit(Guid id)
    {
        Navigation.NavigateTo($"/candidatesettingsupdate/{id}");
    }

    private void NavigateToDelete(Guid id)
    {
        Navigation.NavigateTo($"/candidatesettingsdelete/{id}");
    }
}