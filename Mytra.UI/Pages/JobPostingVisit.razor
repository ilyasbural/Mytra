@page "/jobpostingvisit"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>JobPostingVisit</PageTitle>
<h3>JobPostingVisit</h3>

@if (Response == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <tbody>
            <tr>
                <td><button class="btn btn-info btn-sm" @onclick="() => NavigateToNew()">Ekle</button></td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>REGISTER DATE</th>
                <th>UPDATE DATE</th>
                <th>IS ACTIVE</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var JobPostingVisit in Response.DataList)
            {
                <tr>
                    <td>@JobPostingVisit.Id</td>
                    <td>@JobPostingVisit.Name</td>
                    <td>@JobPostingVisit.RegisterDate</td>
                    <td>@JobPostingVisit.UpdateDate</td>
                    <td>@JobPostingVisit.IsActive</td>
                    <td></td>
                    <td>
                        <button class="btn btn-info btn-sm" @onclick="() => NavigateToDetail(JobPostingVisit.Id)">Detay</button>
                        <button class="btn btn-warning btn-sm" @onclick="() => NavigateToEdit(JobPostingVisit.Id)">Düzenle</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => NavigateToDelete(JobPostingVisit.Id)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    private ServiceResponse<JobPostingVisitResponse>? Response { get; set; }
    
    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<ServiceResponse<JobPostingVisitResponse>>("https://localhost:7046/api/jobpostingvisit");
    }

    private void NavigateToNew()
    {
        Navigation.NavigateTo($"/jobpostingvisitcreate");
    }

    private void NavigateToDetail(Guid id)
    {
        Navigation.NavigateTo($"/jobpostingvisitinfo/{id}");
    }

    private void NavigateToEdit(Guid id)
    {
        Navigation.NavigateTo($"/jobpostingvisitupdate/{id}");
    }

    private void NavigateToDelete(Guid id)
    {
        Navigation.NavigateTo($"/jobpostingvisitdelete/{id}");
    }
}