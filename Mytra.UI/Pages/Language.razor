@page "/language"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Language</PageTitle>
<h3>Language</h3>

@if (Response == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <tbody>
            <tr>
                <td><button class="btn btn-info btn-sm" @onclick="() => NavigateToNew()">Ekle</button></td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>REGISTER DATE</th>
                <th>UPDATE DATE</th>
                <th>IS ACTIVE</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Language in Response.DataList)
            {
                <tr>
                    <td>@Language.Id</td>
                    <td>@Language.Name</td>
                    <td>@Language.RegisterDate</td>
                    <td>@Language.UpdateDate</td>
                    <td>@Language.IsActive</td>
                    <td></td>
                    <td>
                        <button class="btn btn-info btn-sm" @onclick="() => NavigateToDetail(Language.Id)">Detay</button>
                        <button class="btn btn-warning btn-sm" @onclick="() => NavigateToEdit(Language.Id)">Düzenle</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => NavigateToDelete(Language.Id)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    private ServiceResponse<LanguageResponse>? Response { get; set; }
    
    protected override async Task OnInitializedAsync()
    {
        Response  = await Http.GetFromJsonAsync<ServiceResponse<LanguageResponse>>("https://localhost:7046/api/language");
    }

    private void NavigateToNew()
    {
        Navigation.NavigateTo($"/languagecreate");
    }

    private void NavigateToDetail(Guid id)
    {
        Navigation.NavigateTo($"/languageinfo/{id}");
    }

    private void NavigateToEdit(Guid id)
    {
        Navigation.NavigateTo($"/languageupdate/{id}");
    }

    private void NavigateToDelete(Guid id)
    {
        Navigation.NavigateTo($"/languagedelete/{id}");
    }
}