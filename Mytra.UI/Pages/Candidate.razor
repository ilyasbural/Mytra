@page "/candidate"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Candidate</PageTitle>
<h3>Candidate</h3>

@if (Response == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <tbody>
            <tr>
                <td><button class="btn btn-info btn-sm" @onclick="() => NavigateToNew()">Ekle</button></td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>REGISTER DATE</th>
                <th>UPDATE DATE</th>
                <th>IS ACTIVE</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Candidate in Response.DataList)
            {
                <tr>
                    <td>@Candidate.Id</td>
                    <td>@Candidate.Email</td>
                    <td>@Candidate.RegisterDate</td>
                    <td>@Candidate.UpdateDate</td>
                    <td>@Candidate.IsActive</td>
                    <td>
                        <button class="btn btn-info btn-sm" @onclick="() => NavigateToDetail(Candidate.Id)">Detay</button>
                        <button class="btn btn-warning btn-sm" @onclick="() => NavigateToEdit(Candidate.Id)">Düzenle</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => NavigateToDelete(Candidate.Id)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    private ServiceResponse<CandidateResponse>? Response { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<ServiceResponse<CandidateResponse>>("https://localhost:7046/api/candidate");
    }

    private void NavigateToNew()
    {
        Navigation.NavigateTo($"/candidatecreate");
    }

    private void NavigateToDetail(Guid id)
    {
        Navigation.NavigateTo($"/candidateinfo/{id}");
    }

    private void NavigateToEdit(Guid id)
    {
        Navigation.NavigateTo($"/candidateupdate/{id}");
    }

    private void NavigateToDelete(Guid id)
    {
        Navigation.NavigateTo($"/candidatedelete/{id}");
    }
}