@page "/candidateauthenticationinfo/{id:guid}"
@inject HttpClient Http

<PageTitle>CandidateAuthentication - @Id</PageTitle>
<h3>CandidateAuthentication - @Id</h3>

@code
{
    [Parameter]
    public Guid Id { get; set; }
    private ServiceResponse<CandidateAuthenticationResponse>? Response { get; set; }
    private Utilize.CandidateAuthenticationSelectSingle Model { get; set; } = new Utilize.CandidateAuthenticationSelectSingle();

    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<ServiceResponse<CandidateAuthenticationResponse>>
        ($"https://localhost:7046/api/candidateauthenticationsingle?id={Id}");

        if (Response != null && Response.Data != null)
        {
            Model = new Utilize.CandidateAuthenticationSelectSingle
            {
                Id = Response.Data.Id
            };
        }
    }
}