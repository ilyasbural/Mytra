@page "/usersettings"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>UserSettings</PageTitle>
<h3>UserSettings</h3>

@if (Response == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <tbody>
            <tr>
                <td><button class="btn btn-info btn-sm" @onclick="() => NavigateToNew()">Ekle</button></td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>REGISTER DATE</th>
                <th>UPDATE DATE</th>
                <th>IS ACTIVE</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var UserSettings in Response.DataList)
            {
                <tr>
                    <td>@UserSettings.Id</td>
                    <td>@UserSettings.Name</td>
                    <td>@UserSettings.RegisterDate</td>
                    <td>@UserSettings.UpdateDate</td>
                    <td>@UserSettings.IsActive</td>
                    <td></td>
                    <td>
                        <button class="btn btn-info btn-sm" @onclick="() => NavigateToDetail(UserSettings.Id)">Detay</button>
                        <button class="btn btn-warning btn-sm" @onclick="() => NavigateToEdit(UserSettings.Id)">Düzenle</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => NavigateToDelete(UserSettings.Id)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    private ServiceResponse<UserSettingsResponse>? Response { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<ServiceResponse<UserSettingsResponse>>("https://localhost:7046/api/usersettings");
    }

    private void NavigateToNew()
    {
        Navigation.NavigateTo($"/usersettingscreate");
    }

    private void NavigateToDetail(Guid id)
    {
        Navigation.NavigateTo($"/usersettingsinfo/{id}");
    }

    private void NavigateToEdit(Guid id)
    {
        Navigation.NavigateTo($"/usersettingsupdate/{id}");
    }

    private void NavigateToDelete(Guid id)
    {
        Navigation.NavigateTo($"/usersettingsdelete/{id}");
    }
}