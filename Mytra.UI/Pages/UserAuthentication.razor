@page "/userauthentication"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>UserAuthentication</PageTitle>
<h3>UserAuthentication</h3>

@if (Response == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <tbody>
            <tr>
                <td><button class="btn btn-info btn-sm" @onclick="() => NavigateToNew()">Ekle</button></td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>REFRESH TOKEN</th>
                <th>REGISTER DATE</th>
                <th>UPDATE DATE</th>
                <th>IS ACTIVE</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var UserAuthentication in Response.DataList)
            {
                <tr>
                    <td>@UserAuthentication.Id</td>
                    <td>@UserAuthentication.RefreshToken</td>
                    <td>@UserAuthentication.RegisterDate</td>
                    <td>@UserAuthentication.UpdateDate</td>
                    <td>@UserAuthentication.IsActive</td>
                    <td></td>
                    <td>
                        <button class="btn btn-info btn-sm" @onclick="() => NavigateToDetail(UserAuthentication.Id)">Detay</button>
                        <button class="btn btn-warning btn-sm" @onclick="() => NavigateToEdit(UserAuthentication.Id)">Düzenle</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => NavigateToDelete(UserAuthentication.Id)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    private ServiceResponse<UserAuthenticationResponse>? Response { get; set; }
    
    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<ServiceResponse<UserAuthenticationResponse>>("https://localhost:7046/api/userauthentication");
    }

    private void NavigateToNew()
    {
        Navigation.NavigateTo($"/userauthenticationcreate");
    }

    private void NavigateToDetail(Guid id)
    {
        Navigation.NavigateTo($"/userauthenticationinfo/{id}");
    }

    private void NavigateToEdit(Guid id)
    {
        Navigation.NavigateTo($"/userauthenticationupdate/{id}");
    }

    private void NavigateToDelete(Guid id)
    {
        Navigation.NavigateTo($"/userauthenticationdelete/{id}");
    }
}