@page "/candidatedetailupdate/{id:guid}"
@inject HttpClient Http
@inject NavigationManager NavManager

<PageTitle>Candidate Detail - @Id</PageTitle>
<h3>Candidate Detail - @Id</h3>

<EditForm Model="Model" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name">İsim:</label>
        <InputText id="name" @bind-Value="Model.Name" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>

</EditForm>

@code
{
    [Parameter]
    public Guid Id { get; set; }
    private ServiceResponse<CandidateDetailResponse>? Response { get; set; }
    private Utilize.CandidateDetailUpdate Model { get; set; } = new Utilize.CandidateDetailUpdate();

    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<ServiceResponse<CandidateDetailResponse>>
        ($"https://localhost:7046/api/candidatedetailsingle?id={Id}");

        if (Response != null && Response.Data != null)
        {
            Model = new Utilize.CandidateDetailUpdate
            {
                Id = Response.Data.Id,
                Name = Response.Data.Name
            };
        }
    }

    private async Task HandleValidSubmit()
    {
        HttpResponseMessage Result = await Http.PutAsJsonAsync("https://localhost:7046/api/candidatedetail", Model);
        NavManager.NavigateTo("/candidatedetail");
    }
}