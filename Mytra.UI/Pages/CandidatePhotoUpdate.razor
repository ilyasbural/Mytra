@page "/candidatephotoupdate/{id:guid}"
@inject HttpClient Http
@inject NavigationManager NavManager

<PageTitle>CandidatePhoto - @Id</PageTitle>
<h3>CandidatePhoto - @Id</h3>

<EditForm Model="Model" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name">İsim:</label>
        <InputText id="name" @bind-Value="Model.Name" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</EditForm>

@code
{
    [Parameter]
    public Guid Id { get; set; }
    private ServiceResponse<CandidatePhotoResponse>? Response { get; set; }
    private Utilize.CandidatePhotoUpdate Model { get; set; } = new Utilize.CandidatePhotoUpdate();

    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<ServiceResponse<CandidatePhotoResponse>>
        ($"https://localhost:7046/api/candidatephotosingle?id={Id}");

        if (Response != null && Response.Data != null)
        {
            Model = new Utilize.CandidatePhotoUpdate
            {
                Id = Response.Data.Id,
                Name = Response.Data.Name
            };
        }
    }

    private async Task HandleValidSubmit()
    {
        await Http.PutAsJsonAsync("https://localhost:7046/api/candidatephoto", Model);
        NavManager.NavigateTo("/candidatephoto");
    }
}